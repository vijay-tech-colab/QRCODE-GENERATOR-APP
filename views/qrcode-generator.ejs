
<%- include('./partials/top.ejs') %>
<%- include('./partials/header.ejs') %>
<div class=" flex items-center justify-center min-h-screen px-4 py-20">
    <div class="bg-gray-100 p-8 rounded-lg shadow-xl w-full max-w-md">
        <h2 class="text-3xl font-extrabold text-center text-gray-800 mb-6">UPI QR Code Generator</h2>
        

<form id="qrForm" action="/show-qrcode" method="post" class="flex flex-col space-y-4">
    <% if (typeof error !== 'undefined') { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Error: </strong>
            <span class="block sm:inline"><%= error %></span>
        </div>
    <% } %>
    <div>
        <label for="name" class="block text-gray-700 font-medium mb-1">Name</label>
        <input
            type="text"
            id="name"
            name="name"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
            placeholder="Enter your name"
        />
        <p id="nameError" class="text-red-500 text-sm mt-1 hidden"> Name is required.</p>
    </div>
    
    <div>
        <label for="amount" class="block text-gray-700 font-medium mb-1">Amount</label>
        <input
            type="number"
            id="amount"
            name="amount"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
            placeholder="Enter amount"
        />
        <p id="amountError" class="text-red-500 text-sm mt-1 hidden">Amount must be greater than 0.</p>
    </div>
    
    <div>
        <label for="upi" class="block text-gray-700 font-medium mb-1">UPI Payment Address</label>
        <input
            type="text"
            name="upi"
            id="upi"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
            placeholder="Enter UPI ID"
        />
        <p id="upiError" class="text-red-500 text-sm mt-1 hidden">Enter a valid UPI ID (e.g., example@upi).</p>
    </div>
    
    <button
        type="submit"
        class="w-full bg-blue-600 text-white py-3 rounded-lg text-lg font-semibold transition duration-300 hover:bg-blue-700"
    >
        Generate QR Code
    </button>
</form>
        <div id="qrcode" class="mt-6 flex justify-center"></div>
        <a href="/" class="block w-full text-center bg-gray-200 text-gray-700 py-3 rounded-lg font-medium mt-4 hover:bg-gray-300">
            Go To Home
        </a>
    </div>
</div>
<%- include('./partials/bottom.ejs') %>
